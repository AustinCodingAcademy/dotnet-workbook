@model TenantPropertyViewModel

<div>
    @Model.Tenant.Name
</div>

<div class="row">
    <div class="col s12 m7">
        <div class="card">
            <div class="card-image">
                <img src="@Model.Property.Image">
                <span class="card-title">My Property</span>
            </div>
            <div class="card-content">
                <p>
                    @Model.Property.Address @Model.Property.City, @Model.Property.State @Model.Property.Zipcode
                </p>
            </div>
            <div class="card-action">
                <a asp-controller="tenant" asp-action="payment" asp-route-id="@Model.Property.Id">View Payments</a>
            </div>
        </div>
    </div>
</div>

@section Navbar {
    @Html.Partial("TenantNavBar", Model.Tenant.Id)
}